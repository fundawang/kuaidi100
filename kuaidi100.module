/**
 * Implementation of hook_cron().
 */
function kuaidi100_cron() {
	$query=db_select('deliverlog','dl')->fields('dl')->condition(db_or()->condition('dl.status',3, '<>')->isNull('dl.status'));
	$result=$query->execute();
	foreach($result as $r) {
		if($r->status==-3) continue;
		kuaidi100_update_status($r->com, $r->orderno);
	}
}

function kuaidi100_get_status($module, $type) {
	$query=db_select('deliverlog','dl')->fields('dl')->condition('dl.module',$module)->condition('dl.type',$type);
	$result=$query->execute();
	if($result->rowCount()==0) return FALSE;
	else return $result->fetchObject();
}

function kuaidi100_save($module, $type, $com, $orderno) {
	db_merge('deliverlog')
		->key(array('module' => $module, 'type' => $type))
		->fields(array(
			'com' => $com,
			'orderno' => $orderno
		))->execute();
}

/**
 *  * Implementation of hook_uninstall().
 *   */
function kuaidi100_uninstall() {
	variable_del('kuaidi100_api_key');
}

